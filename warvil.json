{
  "name": "warvilphp",
  "version": "1.0.0",
  "description": "WarvilPHP, A lightweight PHP framework",
  "author": "Wardvisual <wardvisual@gmail.com>",
  "keywords": ["php", "framework", "warvilPHP"],
  "license": "MIT",
  "database": {
    "driver": "mysql",
    "host": "localhost",
    "dbname": "works_warvilphp",
    "username": "root",
    "password": "",
    "charset": "utf8mb4"
  },
  "paths": {
    "public": "public",
    "controllers": "app/controllers",
    "models": "app/models",
    "views": "app/views",
    "styles": {
      "base": "public/styles/base.css"
    },
    "layouts": {
      "default": "app/shared/layouts/main.php"
    },
    "errors": {
      "404": "app/shared/errors/404.php"
    },
    "shared": {
      "components": "app/shared/components"
    }
  },
  "config": {
    "password": {
      "algo": "PASSWORD_DEFAULT",
      "options": {
        "cost": 10,
        "salt": 50
      }
    },
    "hash": {
      "algo": "sha256",
      "options": {
        "salt": 50
      }
    },
    "remember": {
      "cookie_name": "hash",
      "cookie_expiry": 604800
    },
    "session": {
      "session_name": "user",
      "token_name": "token"
    },
    "api": {
      "baseUrl": "https://api.warvilphp.com",
      "apiKey": "your_api_key"
    },
    "storage": {
      "directory": "/public/uploads",
      "max_size": 1000000,
      "allowed_types": ["jpg", "jpeg", "png", "gif"]
    }
  }
}
