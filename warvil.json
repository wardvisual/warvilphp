{
  "name": "WarvilFramework1",
  "version": "1.0.0",
  "description": "A lightweight PHP framework named Warvil",
  "author": "Wardvisual <wardvisual@gmail.com>",
  "keywords": ["php", "framework", "warvil"],
  "license": "MIT",

  "database": {
    "host": "localhost",
    "dbname": "works_warvilphp",
    "username": "root",
    "password": "",
    "charset": "utf8mb4"
  },
  "paths": {
    "publicDirectory": "public",
    "controllersDirectory": "app/controllers",
    "modelsDirectory": "app/models",
    "viewsDirectory": "app/views"
  },
  "config": {
    "password": {
      "algo": "PASSWORD_DEFAULT",
      "options": {
        "cost": 10,
        "salt": 50
      }
    },
    "hash": {
      "algo": "sha256",
      "options": {
        "salt": 50
      }
    },
    "remember": {
      "cookie_name": "hash",
      "cookie_expiry": 604800
    },
    "session": {
      "session_name": "user",
      "token_name": "token"
    }
  },
  "api": {
    "baseUrl": "https://api.example.com",
    "apiKey": "your_api_key"
  },
  "layouts": {
    "default": "layouts/default"
  }
}
